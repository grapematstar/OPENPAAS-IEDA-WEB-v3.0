loggregator_ca_name="loggregator-ca"

ln -s ${dir_cf_certs}/loggregator-certs/loggregator-ca.crt ${depot_path}/loggregator-ca.crt
ln -s ${dir_cf_certs}/loggregator-certs/loggregator-ca.key ${depot_path}/loggregator-ca.key
ln -s ${dir_cf_certs}/loggregator-certs/loggregator-ca.key ${depot_path}/loggregator-ca.crl

# Statsd injector certificate
certstrap --depot-path ${depot_path} request-cert --passphrase '' --common-name statsdinjector
certstrap --depot-path ${depot_path} sign statsdinjector --CA ${loggregator_ca_name}